<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #2F80ED, #56CCF2);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sdprototype.Controllers.TrackSelectionScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <Label text="Select a Track" alignment="CENTER" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);" BorderPane.alignment="CENTER">
            <font>
                <Font name="Arial Bold" size="28.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="30.0" top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="40.0">
            <!-- Left Side: Track Buttons -->
            <VBox alignment="CENTER" spacing="20.0">
                <!-- Shrek Theme Button (Green) -->
                <Button fx:id="track1Button" mnemonicParsing="false" onAction="#handleTrack1Button"
                        prefHeight="60.0" prefWidth="280.0"
                        style="-fx-background-color: #7c9f45; -fx-text-fill: #f2e8c9; -fx-border-color: #3e5520; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Circle fx:id="track1Circle" fill="#3e5520" radius="12.0" stroke="#d9ed92" strokeType="INSIDE" strokeWidth="2" />
                            <Label text="Shrek's Swamp Trek" textFill="#f2e8c9">
                                <font>
                                    <Font name="Comic Sans MS Bold" size="16.0" />
                                </font>
                            </Label>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Rainforest Theme Button (Blue-Green) -->
                <Button fx:id="track2Button" mnemonicParsing="false" onAction="#handleTrack2Button"
                        prefHeight="60.0" prefWidth="280.0"
                        style="-fx-background-color: #1a936f; -fx-text-fill: #f3e9d2; -fx-border-color: #88d498; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Circle fx:id="track2Circle" fill="#114b5f" radius="12.0" stroke="#88d498" strokeType="INSIDE" strokeWidth="2" />
                            <Label text="Rainforest Rumble" textFill="#f3e9d2">
                                <font>
                                    <Font name="Arial Rounded MT Bold" size="16.0" />
                                </font>
                            </Label>
                        </HBox>
                    </graphic>
                </Button>

                <!-- Pirate Theme Button (Brown) -->
                <Button fx:id="track3Button" mnemonicParsing="false" onAction="#handleTrack3Button"
                        prefHeight="60.0" prefWidth="280.0"
                        style="-fx-background-color: #c99767; -fx-text-fill: #2c1603; -fx-border-color: #7d5a3c; -fx-border-width: 3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Circle fx:id="track3Circle" fill="#7d5a3c" radius="12.0" stroke="#e6c89c" strokeType="INSIDE" strokeWidth="2" />
                            <Label text="Pirate's Gold Rush" textFill="#2c1603">
                                <font>
                                    <Font name="Trebuchet MS Bold" size="16.0" />
                                </font>
                            </Label>
                        </HBox>
                    </graphic>
                </Button>
            </VBox>

            <!-- Right Side: Track Information -->
            <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: rgba(255, 255, 255, 0.85); -fx-border-color: #cccccc; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 0);">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <Label text="Track Information" style="-fx-text-fill: #333333;">
                    <font>
                        <Font name="Arial Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Shrek's Swamp Trek:&#10;Make your way from the fancy halls of Duloc Castle back to Shrek's beloved swamp! Watch out for fairy tale mischief along the way â€” it's a muddy, magical journey home!&#10;&#10;Rainforest Rumble:&#10;Climb aboard your adventure through the lush jungle! Discover playful animals, mysterious plants, and other rainforest creatures as you navigate the wild tropical world.&#10;&#10;Pirate's Gold Rush:&#10;Set sail on the ultimate adventure to find the legendary hidden treasure! Follow the twists and turns of the map, brave obstacles, and race to reach the X before someone else!" style="-fx-fill: #333333;" wrappingWidth="260.0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <Button fx:id="startGameButton" disable="true" mnemonicParsing="false" onAction="#handleStartGameButton"
                prefHeight="70.0" prefWidth="250.0"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 35; -fx-font-size: 18px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 3);"
                text="Start Adventure" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="30.0" top="30.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>