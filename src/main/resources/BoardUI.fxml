<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="org.example.sdprototype.Controllers.BoardUIController"
        prefHeight="500.0"
        prefWidth="300.0"
        style="-fx-background-color: #f4f4f4;">

    <center>
        <VBox
                alignment="TOP_CENTER"
                spacing="20.0"
                style="-fx-background-color: white;
                   -fx-background-radius: 10;
                   -fx-padding: 20px;">
            <padding>
                <Insets top="30.0" right="20.0" bottom="30.0" left="20.0" />
            </padding>

            <Label
                    text="Game Track"
                    textAlignment="CENTER">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>

            <Text
                    fx:id="trackInfoLabel"
                    text="Current Track: Main Board"
                    textAlignment="CENTER">
                <font>
                    <Font size="14.0" />
                </font>
            </Text>

            <HBox
                    alignment="CENTER"
                    spacing="10.0">
                <Label
                        text="Player"
                        textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <Text
                        fx:id="playerInfoLabel"
                        text="Player 1">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Text>
            </HBox>

            <VBox
                    alignment="CENTER"
                    spacing="15.0"
                    VBox.vgrow="ALWAYS">
                <Label
                        text="Dice Roll"
                        textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <Text
                        fx:id="diceResultText"
                        text="Ready to Roll"
                        textAlignment="CENTER">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>

                <StackPane
                        prefWidth="150.0"
                        prefHeight="150.0"
                        style="-fx-background-color: #e0e0e0;
                           -fx-background-radius: 10;">
                    <Label
                            text="ðŸŽ²"
                            style="-fx-font-size: 80px;"/>
                </StackPane>

                <Button
                        fx:id="rollDiceButton"
                        text="Roll Dice"
                        onAction="#handleRollDice"
                        prefWidth="200.0"
                        prefHeight="50.0"
                        style="-fx-background-color: #3498db;
                           -fx-text-fill: white;
                           -fx-background-radius: 25;">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </VBox>
        </VBox>
    </center>
</BorderPane>